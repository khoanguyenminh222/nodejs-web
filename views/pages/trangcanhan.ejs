                                    <div class="mr-2">
                                        <img class="rounded-circle avatar" src="/uploads/anhdaidien/<%=student.image%>" alt="">
                                    </div>
                                    <div class="ml-2 mt-3">
                                        <div class="h6 m-0"><p><%=student.fullname%></p></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <textarea onkeyup="textAreaAdjust(this)" class="form-control textarea txtnoidung "></textarea>
