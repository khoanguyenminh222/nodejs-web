                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button class="btn btn-danger chapnhanxoabinhluan">Xoá</button>
                    <button class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

