                            <button class="btn btn-danger float-right cursor-pointer" data-dismiss="modal">Đóng</button>
                            <button class="btn btn-success float-right cursor-pointer chapnhanchinhsuabaiviet" >Thay đổi</button>

                        </div>
                    </div>

                </div>
            </form>
            </div>
        </div>
    </div>
