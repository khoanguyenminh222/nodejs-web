<div class="container-fluid">
    <div class="form-group"><button class="btn btn-success btn-sm" type="submit" id="back"><a class="text-light" href="/quanly">Quay lại</a></button></div>
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold">Thông báo của tôi</p>
        </div>
        <div class="card-body">
            <% thongbao.forEach(function(thongbao){  %>
            <div class="card-body border-bottom border-primary" id="<%=thongbao._id%>">
                <div class="row align-items-center no-gutters">
                    <div class="col mr-2">
                        <input type="text" class="allchuyenmuc d-none" value="<%=data.chuyenmuc%>">
                        <div class="dropdown">
                            <button class="btn btn-link dropdown-toggle text-danger" type="button" data-toggle="dropdown" >
                                <i  class="fa fa-ellipsis-h "></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-left ">
                                <a class="dropdown-item btnchinhsuathongbao" data-id="<%=thongbao._id%>" data-tieude="<%=thongbao.tieude%>" data-noidung="<%=thongbao.noidung%>" data-chuyenmuc="<%=thongbao.chuyenmuc%>" data-toggle="modal" data-target="#modalchinhsuathongbao">Chỉnh sửa </a>
                                <a class="dropdown-item btnxoathongbao" data-id="<%=thongbao._id%>" data-tieude="<%=thongbao.tieude%>" data-toggle="modal" data-target="#modalxoathongbao">Xoá</a>
                            </div>
                        </div>
                        <div class="text-uppercase text-primary font-weight-bold text-xs mb-1"><%=thongbao.tieude%></div>
                        <div class="text-dark text-muted mb-0"><small><%=thongbao.thoigian%></small></div>
                        <div class="text-dark text-muted mb-0"><small>Đăng bởi: <%=thongbao.phong_khoa%></small></div>
                        <div class="text-dark text-muted mb-0"><small>Thuộc chuyên mục: <%=thongbao.chuyenmuc%></small></div>
                        <div class="text-dark font-weight-bold h5 mb-0 noidungthongbao"><%=thongbao.noidung%></div>
                        
                    </div>
                    <div class="col-auto"><a class="btn_chitietthongbao" href="/quanly/chitietthongbao/<%=thongbao._id%>"><i class="fas fa-arrow-right fa-2x text-info"></i></a></div>
                </div>
            </div>
            <%})%>

            <div class="row">
                <div class="col-md-6 align-self-center">
                    <p id="dataTable_info" class="dataTables_info" role="status" aria-live="polite">Tổng: <%=pages%> trang</p>
                </div>
                <div class="col-md-6">
                <% if(pages > 0) { %>
                
                    <nav class="d-lg-flex justify-content-lg-end dataTables_paginate paging_simple_numbers">
                    <ul class="pagination" style="margin-top: 2rem;">
                        
                        <% if(current == 1) { %> 
                            <li class="page-item disabled">
                            <a class="page-link" href="/quanly/thongbaocuatoi">First</a>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                            <a class="page-link" href="/quanly/thongbaocuatoi">First</a>
                            </li>
                        <% } %>
                        
                        <% var i = (Number(current) > 3 ? Number(current) - 2 : 1) %> 
                        <% if(i !== 1) { %>
                            <li class="page-item disabled">
                            <a class="page-link" href="#">...</a>
                            </li>
                        <% } %>
                        <% for(; i <= (Number(current) + 2) && i <= pages; i++) { %>

                        <% if(i == current) { %>
                            <li class="page-item active">
                            <a class="page-link" href="/quanly/thongbaocuatoi/<%= i %>">
                                <%= i %>
                            </a>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                            <a class="page-link" href="/quanly/thongbaocuatoi/<%= i %>">
                                <%= i %>
                            </a>
                            </li>
                        <% } %>
                        <% if (i == Number(current) + 2 && i < pages) { %>
                            <li class="page-item disabled">
                            <a class="page-link" href="#">...</a>
                            </li>
                        <% } %>
                        <% } %>
                        
                        <!-- LAST ITEM -->
                        <% if(current == pages) { %> 

                            <li class="page-item disabled">
                            <a class="page-link" href="#">
                                Last
                            </a>
                            </li>
                        <% } else { %>

                            <li class="page-item">
                            <a class="page-link" href="/quanly/thongbaocuatoi/<%= pages %>">
                                Last
                            </a>
                            </li>
                        <% } %>
                    </ul>
                    </nav>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- modal xoá thông báo -->
<div class="modal" id="modalxoathongbao">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <div>
                    <h4 class="modal-title">Xoá thông báo</h4>
                </div>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <p>Thông báo với tiêu đề: </p>
                <p><strong class="noidungtieude">a</strong></p>            
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button class="btn btn-danger chapnhanxoathongbao">Xoá</button>
                <button class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- modal chỉnh sửa thông báo -->
<div class="modal" id="modalchinhsuathongbao">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <div>
                    <h4 class="modal-title">Chỉnh sửa thông báo</h4>
                </div>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <p>Tiêu đề</p>
                <textarea class="form-control input-login tieude"></textarea>
                <p>Nội dung</p>
                <textarea class="form-control input-login noidung"></textarea>
                <p>Chuyên mục đã chọn</p>
                <p class="form-control input-login chuyenmuc"></p>
                <p>Chọn chuyên mục mới</p>
                <select class="chonchuyenmuc">
                    
                </select>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button class="btn btn-success chapnhanchinhsuathongbao">Chỉnh sửa</button>
                <button class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>



